<div class="pop-up" >
  <div class="content">
  <% @problems.each do |problem| %>
  <h2 class="content-title">Category: <%= problem.category %></h2>
  <p class="content-text">Description: <%= problem.description.capitalize %></p>
  <p class="content-text">Location: <%= problem.location %></p>
  <p class="content-text">Date: <%= problem.date %></p>
  <p class="content-text">Votes: <%= problem.favoritors.count %></p>
  <% end %>
  </div>
</div>
