<div class="container">
  <%= simple_form_for @problem do |f| %>
    <%= f.input :category, prompt: "Please Select", as: :select, collection: Problem::CATEGORIES%>
    <%= f.input :description %>
    <%= f.input :location, :input_html => { :class => 'algolia-input' } %>
    <%= f.button :submit, class: "btn btn-grey mt-3" %>
  <% end %>
</div>
