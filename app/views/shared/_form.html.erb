<div class="container">

  <%= simple_form_for @problem do |f| %>

    <%= f.input :category, prompt: "Please Select", as: :select, collection: Problem::CATEGORIES, input_html: { class: 'form_inputs' } %>
    <%= f.input :description, input_html: { class: 'form_inputs' } %>
    <%= f.input :location, :input_html => { :class => 'algolia-input' } %>
    <%#= f.input :location, input_html: { class: 'form_inputs' } %>
    <%= f.button :submit, class: 'btn-outline form_submit mt-3' %>

  <% end %>
</div>

