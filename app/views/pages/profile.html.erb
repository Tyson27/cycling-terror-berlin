<h1>My Profile</h1>
<%= cl_image_tag @user.avatar.key, radius: 200, height: 200, width: 200, crop: :fill %>
<%= link_to "Update profile", edit_user_registration_path %>

<div class="container">
  <%= current_user.first_name.capitalize %>
  <%= current_user.last_name.capitalize%>
  <%= current_user.username %>

  <%= link_to "Change my password", edit_user_registration_path %>
</div>
<% if user_signed_in? %>
  <li>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<% end %>
