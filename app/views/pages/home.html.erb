
<div class="picture_backround">

  <div class="container">

  <%= image_tag "logo_transparent.png", alt: "logo", class: "logo", height: 500 %>

  <h1 class="hometext">Welcome back, <%= current_user.first_name.capitalize if current_user %>!</h1>
  <% if current_user %>
    <%= link_to new_problem_path, class: "btn btn-outline btn-homepage-menu" do %> <i class="fas fa-plus-circle"></i> Add a Problem
    <% end %>
  <% else %>
    <button type="button" class="btn btn-outline btn-homepage-menu" data-toggle="modal" data-target="#exampleModal">
      <i class="fas fa-plus-circle"></i> Add a Problem
    </button>
  <% end %>
  <%= link_to problems_path, class: "btn btn-outline btn-homepage-menu" do %> <i class="fas fa-map-marked-alt"></i> Show my Map <% end %>
  <% if current_user %>
    <%= link_to dashboard_path, class: "btn btn-outline btn-homepage-menu" do %> <i class="fas fa-bookmark"></i> My Contributions <% end %>
  <% else %>
    <button type="button" class="btn btn-outline btn-homepage-menu" data-toggle="modal" data-target="#exampleModal">
      <i class="fas fa-bookmark"></i> My Contributions
    </button>
  <% end %>
<!--   <%= link_to dashboard_path, class: "btn btn-outline btn-homepage-menu" do %> <i class="fas fa-info-circle"></i> Information <% end %>
 -->
 <%= link_to profile_path, class: "btn btn-outline btn-homepage-menu" do %> <i class="fas fa-user-circle"></i> Account <% end %>
  </div>


</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
<!-- Title -->
        <h5 class="modal-title" id="exampleModalLabel">Log in</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(:user, url: user_session_path) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>




